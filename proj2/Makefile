# ####################################################
# Car Simulation
# ####################################################
CC = gcc
CFLAGS = -Wall -std=c11 -lncurses

TARGET = simulation.out
INC_DIR := -I.

SRCS := main.c server.c simulation.c linked_list.c printing.c
OBJS := $(SRCS:.c=.o)

#------------------------------------------------------
.SILENT:

#------------------------------------------------------
.SUFFIXES: .o .c .h

#------------------------------------------------------
all: $(OBJS)
	$(CC) $(OBJS) $(CFLAGS) -o $(TARGET)
#------------------------------------------------------
clean:
	rm -f *.o *~ $(TARGET)
#------------------------------------------------------
distclean: clean
#------------------------------------------------------
.c.o:
	$(CC) -c $(CFLAGS) $(INC_DIR) -c $<
#------------------------------------------------------
run: $(EXE)
	./$(TARGET)
#------------------------------------------------------
